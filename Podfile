# Uncomment the next line to define a global platform for your project
platform :ios, '9.0'

target 'MMRxSwift' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for MMRxSwift
  pod 'RxSwift',    '~> 3.0'
  pod 'RxCocoa',    '~> 3.0'
  pod 'SnapKit', '~> 3.2.0'
  pod 'Alamofire', '~> 4.4'
  pod 'SwiftyJSON'
  pod 'ObjectMapper', '~> 2.2'
  pod 'MJRefresh', '~> 3.1.12'
  
  target 'MMRxSwiftTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'RxBlocking', '~> 3.0'
    pod 'RxTest',     '~> 3.0'
  end

  target 'MMRxSwiftUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
